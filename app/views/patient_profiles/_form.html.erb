<%= simple_form_for(@patient_profile) do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <div class = "col-md-6">
        <%= f.input :first_name %>
    </div>
    <div class = "col-md-6">
        <%= f.input :last_name %>
    </div>
  </div>
    <%= f.input :phone %>
    <%= f.input :address %>
    <%= f.input :suburb %>
    <%= f.input :state %>
    <%= f.input :postcode %>
    <%= f.input :country, priority: ['Australia',  'New Zealand'] %>
    <%= f.input :medicare_number %>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
